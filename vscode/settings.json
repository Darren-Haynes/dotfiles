{
    "window.menuBarVisibility": "toggle",
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "One Dark Pro",
    "editor.fontFamily": "'Fira Code','SpaceMono Nerd Font Mono','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "terminal.integrated.fontFamily": "'SpaceMono Nerd Font Mono', 'monospace'",
    "window.zoomLevel": 0,
    "window.restoreWindows": "none",
    "keyboard.dispatch": "keyCode",
    
    "files.exclude": {
      "**/.git": true,
      "**/.vscode": true,
    },
    "[python]": {
        "editor.rulers": [
            79,
      ]
    },
    "workbench.iconTheme": "vscode-icons",

    // VIM
    "vim.useSystemClipboard": true,
    "vim.leader": "<space>",
    "vim.handleKeys": {
    "<C-k>": false,
    },

    // VIM NORMAL MODE
    "vim.normalModeKeyBindings": [
      // { "before": [ "K" ], "after": [ "ctrl+b" ] }
    ],
  
    // VIM VISUAL MODE
    // "vim.visualModeKeyBindings": [
    //   { "before": [ "J" ], "after": [ "ctrl+f" ] },
    //   { "before": [ "K" ], "after": [ "ctrl+b" ] },
    // ],
    "vim.visualModeKeyBindingsNonRecursive": [
      { "before": [ ">" ], "commands": [ "editor.action.indentLines" ] },
      { "before": [ "<" ], "commands": [ "editor.action.outdentLines" ] },
    ],
    "auto-close-tag.SublimeText3Mode": true,
    "workbench.activityBar.visible": false,
    "editor.fontLigatures": true,
    "workbench.sideBar.location": "left",
    "window.titleBarStyle": "custom"
  }