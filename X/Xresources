!!!!!!!!!! RESOLUTIONS !!!!!!!!!!
!!!!!!!!!! & SCREEN    !!!!!!!!!!
! Xft.dpi:		192
! Xft.dpi:		144
!Xft.dpi:		240
! Xft.dpi:		96
Xft.dpi:		120
Xft.autohint:	0
Xft.lcdfilter: lcddefault
Xft.hintstyle:  hintfull
Xft.hinting:	1
Xft.antialias:  1
Xft.rgba:		rgb


!!!!!!!!!! XTERM    !!!!!!!!!!
!!!!!!!!!! SETTINGS !!!!!!!!!!
xterm*faceName: SpaceMono Nerd Font Mono:size=12:antialias=false
xterm*font:		7x15

! Change copy and paste keys
XTerm*vt100.translations: #override \
    Shift Ctrl <Key> C: copy-selection(CLIPBOARD) \n\
    Shift Ctrl <Key> V: insert-selection(CLIPBOARD)

! Make Alt work like you expect it too.
XTerm.vt100.metaSendsEscape: true

rofi.theme:		solarized_alternate.rasi
rofi.font:      SpaceMono for Powerline 24
rofi.width:     40
rofi.lines:     10
rofi.opacity:   20
rofi.position:  2


