# IMAGES
alias r90="convert -rotate 90 " # then 'from.jpg' to 'to.jpg'
alias r180="convert -rotate 180 " # then 'from.jpg' to 'to.jpg'
alias screenshot='. ~/.bash_scripts/screenshot.sh'
alias windowshot="import -screen " # then filename
alias drawarea="import root " # then filename
alias show="wezterm imgcat "
alias fehs="feh --scale-down "

# VOLUME AND BRIGHTNESS
alias b10='xrandr --output HDMI-1  --brightness 1.0'
alias b1='xrandr --output HDMI-1  --brightness 0.1'
