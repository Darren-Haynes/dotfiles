# NODE / NPM
alias ns='npm start'

# LINUX SHORTCUTS
alias ag='alias | grep '
alias c='clear'
alias caps='setxkbmap -option caps:escape'
alias dg='systemctl | grep '
alias dimension='eval $(slop -t 0 -b 1) && notify-send "Selection info" "Area: ${W} x ${Y}px \n Position: X = ${X}px, Y = ${Y}px" && echo ${W}x${H} | xsel -bi'
alias fontlist="fc-list : family | sort"
alias hg='history | grep '
alias ht='history | tail '
alias now="date '+%R'"
alias ramsort="ps -e -o pid,vsz,comm= | sort -n -k 2"
alias sortsize='du -h --max-depth=0 * | sort -h'
alias xinfo='xrandr --nograb --current'
alias xr='xrdb ~/Dotfiles/X/Xresources'
alias xra='xrdb -query -all'

# COPY
alias copy='xsel --clipboard < '

#APTITUDE
alias as='apt-cache search '
alias update='sudo apt update && sudo apt upgrade'
alias upgradable='apt list --upgradable'

# SOURCING
alias soa='source ~/.aliases'
alias sob='source ~/.bashrc'
alias soz='source ~/.zshrc'

# NETWORKING
alias myip='curl ifconfig.me'
alias netoff='nmcli networking off'
alias neton='nmcli networking on'
alias wifis='nmcli dev wifi list'
alias wificon='nmcli connection show | head -2 '
alias wifioff='nmcli radio wifi off'
alias wifion='nmcli radio wifi on'

# Pastel terminal tool
alias rgb='pastel format rgb'
