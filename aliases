# LINUX SHORTCUTS
alias ag='alias | grep '
alias c='clear'
alias copy='xsel --clipboard < '
alias ctl='systemctl '
alias dg='systemctl | grep '
alias dimension='eval $(slop -t 0 -b 1) && notify-send "Selection info" "Area: ${W} x ${Y}px \n Position: X = ${X}px, Y = ${Y}px" && echo ${W}x${H} | xsel -bi'
alias fontlist="fc-list : family | sort"
alias hg='history | grep '
alias now="date '+%R'"
alias ramsort="ps -e -o pid,vsz,comm= | sort -n -k 2"
alias sortsize='du -h --max-depth=0 * | sort -h'
alias xinfo='xrandr --nograb --current'
alias xr='xrdb ~/dotfiles/X/Xresources'

#APTITUDE
