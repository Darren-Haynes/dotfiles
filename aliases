alias b3='xrandr --output HDMI-1  --brightness 0.3'
alias b4='xrandr --output HDMI-1  --brightness 0.4'
alias b5='xrandr --output HDMI-1  --brightness 0.5'
alias b6='xrandr --output HDMI-1  --brightness 0.6'
alias b7='xrandr --output HDMI-1  --brightness 0.7'
alias b8='xrandr --output HDMI-1  --brightness 0.8'
